{
  // General formatting
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false, // usually false â€“ prevents mess
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // ESLint
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit" // or true
  },

  // Optional but very recommended
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.quiet": false,

  // These prevent Prettier & built-in formatter conflicts
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Optional: show Prettier / ESLint in status bar
  "prettier.requireConfig": false
}
